{
  "name": "dot-nft",
  "type": "module",
  "version": "0.0.1-alpha.1",
  "description": "A CLI tool for minting NFTs on the Polkadot ecosystem",
  "bin": {
    "dot-nft": "./dist/index.js"
  },
  "files": [
    ".papi",
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "start": "bun run src/index.ts",
    "postinstall": "npx papi",
    "prepare": "bun run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "bundleDependencies": [
    "@polkadot-api/descriptors"
  ],
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "@filebase/sdk": "^1.0.6",
    "@polkadot-api/descriptors": "file:.papi/descriptors",
    "@polkadot-labs/hdkd": "^0.0.17",
    "@polkadot-labs/hdkd-helpers": "^0.0.17",
    "@polkadot/keyring": "^13.5.2",
    "@polkadot/util": "^13.5.2",
    "@polkadot/util-crypto": "^13.5.2",
    "dotenv": "^16.5.0",
    "picocolors": "^1.1.1",
    "polkadot-api": "^1.14.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.15.0",
    "@types/bun": "latest",
    "eslint": "^9.29.0",
    "tsdown": "^0.12.8"
  }
}
